<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.feicui.com.myproject.activity.RegistActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="用户注册"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="用户姓名 |"
            android:textSize="16sp" />

        <edu.feicui.com.myproject.view.ClearEditText
            android:id="@+id/edit_registname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_username"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:cursorVisible="false"
            android:gravity="left|center"
            android:hint="注册姓名"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:paddingLeft="10.0dip"
            android:singleLine="true"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="注册密码 |"
            android:textSize="16sp" />

        <edu.feicui.com.myproject.view.ClearEditText
            android:id="@+id/edit_registpwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_username"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:cursorVisible="false"
            android:gravity="left|center"
            android:hint="密码"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:paddingLeft="10.0dip"
            android:password="true"
            android:singleLine="true"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="确认密码 |"
            android:textSize="16sp" />

        <edu.feicui.com.myproject.view.ClearEditText
            android:id="@+id/edit_regiscompwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_username"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:cursorVisible="false"
            android:gravity="left|center"
            android:hint="再次输入密码"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:paddingLeft="10.0dip"
            android:password="true"
            android:singleLine="true"
            android:textSize="16.0sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_float_nomal"
        android:padding="15dp"
        android:text="完成注册"
        android:textColor="@android:color/white" />

</LinearLayout>
